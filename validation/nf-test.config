config {
    // Test directory configuration
    testsDir "."
    workDir ".nf-test"
    
    // Test execution settings
    withTrace false
    autoSort false
    
    // Default profile for validation tests
    profile "test"
    
    // Global Nextflow options for validation tests
    options "-plugins nf-core-utils@0.2.0 --validate_params false"
    
    // Plugin configuration (if needed for future extensions)
    plugins {
        // Future plugin dependencies can be added here
        // e.g., load "nft-utils@1.0.0" for specialized testing utilities
    }
}
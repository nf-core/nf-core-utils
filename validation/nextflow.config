plugins {
    id 'nf-core-utils@0.3.0'
}

// Basic configuration for integration tests
params {
    outdir = 'results'
}

process {
    executor = 'local'
}

// NOTE so the validation checks don't fail in CI
conda.channels          = ['conda-forge', 'bioconda']

// Enable debugging for better test visibility
trace {
    enabled = true
    file = 'trace.txt'
}

timeline {
    enabled = true
    file = 'timeline.html'
}

report {
    enabled = true
    file = 'report.html'
}

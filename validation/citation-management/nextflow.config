/*
 * Configuration for nf-core-utils citation management validation test
 */

// Minimal configuration for testing
params {
    // Test parameters
    test_mode = true
    outdir = "results"
}

// Plugin configuration
plugins {
    id 'nf-core-utils'
}

// Execution configuration
process {
    // Minimal resources for testing
    cpus = 1
    memory = 1.GB
    time = 10.m
}

// Reporting configuration
report {
    enabled = true
    overwrite = true
}

timeline {
    enabled = true
    overwrite = true
}

dag {
    enabled = true
    overwrite = true
}

// Test profile for faster execution
profiles {
    test {
        process.executor = 'local'
    }
    
    debug {
        process.executor = 'local'
        executor.queueSize = 1
    }
}
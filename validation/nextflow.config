plugins {
    id 'nf-core-utils'
}

// Basic configuration for integration tests
params {
    outdir = 'results'
}

process {
    executor = 'local'
}

// Enable debugging for better test visibility
trace {
    enabled = true
    file = 'trace.txt'
}

timeline {
    enabled = true
    file = 'timeline.html'
}

report {
    enabled = true
    file = 'report.html'
}

// Configuration for topic channel citation validation test

params {
    // Control optional process execution
    run_optional = false
    
    // Output directory 
    outdir = 'results'
}

// Plugin configuration
plugins {
    id 'nf-core-utils@0.2.0'
}

manifest {
    name = 'nf-core-utils-topic-citations-test'
    description = 'Validation test for topic channel citation management'
    version = '1.0.0'
}

// Process configuration
process {
    // Basic resource allocation
    cpus = 1
    memory = '1 GB'
    time = '5 min'
}